{
    "manifest_version": 3,
    "name": "JSC",
    "version": "1.0",
    "description": "Allows normal password input on the JSC virtual keyboard login page.",
    "icons": {
        "48": "assets/icon-48.png",
        "96": "assets/icon-96.png"
    },
    "permissions": [],
    "host_permissions": [
        "https://www.jogossantacasa.pt/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.jogossantacasa.pt/*"
            ],
            "js": [
                "dist/main.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "jsc@dy0gu.com"
        }
    }
}
